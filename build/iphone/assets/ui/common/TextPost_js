function TextPost(e){this.title=e.title,this.description=new Description(e.description).getDescription(),this.timestring=new DateObject(e.pubDate).dateString(),this.image=new Description(e.description).getImage(),this.url=e.link,this.postheight=0}function getContainerHeight(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0});new CachedImageView("imageDirectoryName",e,t);var i=t.toImage().height,o=t.toImage().width,a=i/o;return Math.floor(300*a)}function getTitleLabel(e){var t=Ti.UI.createLabel({text:e,height:"auto",width:250,color:"#efc006",font:{fontFamily:"Helvetica",fontSize:16,fontWeight:"bold"}}),i=Ti.UI.createView({width:250,height:"auto"});i.add(t);var o=Ti.UI.createLabel({text:e,left:15,top:15,bottom:10,height:i.toImage().height,textAlign:"left",width:270,color:"#303030",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"Helvetica",fontSize:16,fontWeight:"bold"}});return o}function getDescriptionLabel(e){var t=Ti.UI.createLabel({text:e,left:15,bottom:10,top:0,height:70,textAlign:"left",width:200,color:"#000000",font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});return this.postheight+=t.toImage().height,t}function getPostImage(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0});new CachedImageView("imageDirectoryName",e,t);var i=t.toImage().height,o=t.toImage().width,a=o/i,n=Math.floor(60*a),r=Ti.UI.createImageView({image:this.image,hires:!0,width:n,top:0});return r}var DateObject=require("ui/common/DateObject"),Description=require("ui/common/Description"),CachedImageView=require("ui/common/CachedImageView");TextPost.prototype.featureRow=function(){var e=Ti.UI.createTableViewRow({hasChild:!0,link:this.url,height:"auto",padding:0,top:0,bottom:0,layout:"vertical",backgroundColor:"e2e2e2"});e.rightImage=null,e.backgroundSelectedImage=null,e.backgroundFocusImage=null;var t=Ti.UI.createView({backgroundColor:"ffffff",height:"auto",width:300,left:10,top:10,bottom:0,padding:0,borderRadius:5,borderColor:"#d5d5d5",borderWidth:1});titlelbl=getTitleLabel(this.title),t.add(titlelbl),desclbl=getDescriptionLabel(this.description),t.add(desclbl),desclbl.top=titlelbl.height+15;var i=Ti.UI.createLabel({text:"Posted 2 hours ago in Kudos to Iowa People",left:15,bottom:10,height:15,textAlign:"left",width:270,color:"#616161",shadowColor:"#ffffff",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});i.top=titlelbl.height+desclbl.height+20,t.add(i);var o=Ti.UI.createView({width:60,height:60,right:15,top:titlelbl.height+20,borderRadius:4,borderColor:"#d5d5d5",borderWidth:1}),a=getPostImage(this.image);return new CachedImageView("imageDirectoryName",this.image,a),o.add(a),t.add(o),t.height=titlelbl.height+desclbl.height+i.height+35,e.height=t.height+25,e.add(t),e},module.exports=TextPost;