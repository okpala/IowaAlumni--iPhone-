function MenuRow(e,t,i,o){this.s=o;var a=Ti.UI.createTableViewRow({height:45,backgroundImage:"menu.jpg",backgroundFocusedImage:"pressed.jpg",backgroundSelectedImage:"pressed.jpg",feedTitle:e,feed:i});if(this.s){a.backgroundImage="pressed.jpg";var n=Ti.UI.createLabel({text:e,left:60,height:45,textAlign:"left",width:270,color:"#ebc22f",shadowColor:"#000000",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-CondensedBold",fontSize:17,fontWeight:"bold"}}),r=Ti.UI.createImageView({image:t+"selected.png",width:30,height:30,left:10})}else var n=Ti.UI.createLabel({text:e,left:60,height:45,textAlign:"left",width:270,color:"#cccccc",shadowColor:"#000000",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-CondensedBold",fontSize:17,fontWeight:"bold"}}),r=Ti.UI.createImageView({image:t+".png",width:30,height:30,left:10});return a.add(r),a.add(n),a}module.exports=MenuRow;