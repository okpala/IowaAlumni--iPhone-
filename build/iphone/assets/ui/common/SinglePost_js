function SinglePost(e){var t=Ti.UI.createTableView({separatorColor:"d5d5d5",backgroundColor:"ffffff",height:"auto",width:300,left:10,top:10,bottom:0,padding:0,borderRadius:5,borderColor:"#d5d5d5",borderWidth:1,scrollable:!1}),i=Ti.UI.createTableViewRow({height:120});i.addEventListener("click",function(){new WebView(e.url)}),t.height=i.height;var o=[];o.push(i),t.setData(o);var a=Ti.UI.createTableViewRow({hasChild:!0,height:t.height+15,padding:0,top:0,bottom:0,layout:"vertical",selectionStyle:"none",backgroundColor:"e2e2e2"});a.rightImage=null,a.backgroundSelectedImage=null,a.backgroundFocusImage=null,a.add(t);var n=getTitleLabel(e.title);if(i.add(n),"NA"!=e.image){var r=Ti.UI.createView({width:60,height:60,right:15,top:n.height+20,borderRadius:4,borderColor:"#d5d5d5",borderWidth:1}),d=getPostImage(e.image);r.add(d),i.add(r);var l=getDescriptionLabel(e.description,200);i.add(l)}else{var l=getDescriptionLabel(e.description,280);i.add(l)}l.top=n.height+10;var c=Ti.UI.createLabel({text:new DateObject(e.pubDate).prettyDate(),left:10,bottom:10,height:15,textAlign:"left",width:270,color:"#616161",shadowColor:"#ffffff",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});return c.top=n.height+l.height+10,i.add(c),i.height=n.height+l.height+c.height,t.height=i.height,a.height=i.height+10,a}function getTitleLabel(e){var t=Ti.UI.createLabel({text:e,height:"auto",width:250,color:"#efc006",font:{fontFamily:"Helvetica",fontSize:16,fontWeight:"bold"}}),i=Ti.UI.createView({width:250,height:"auto"});i.add(t);var o=Ti.UI.createLabel({text:e,left:10,top:10,bottom:10,height:i.toImage().height,textAlign:"left",width:270,color:"#303030",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"Helvetica-Bold",fontSize:16,fontWeight:"normal"}});return o}function getDescriptionLabel(e,t){var i=Ti.UI.createLabel({text:e,left:10,bottom:10,top:0,height:70,textAlign:"left",width:t,color:"#000000",font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});return i}function getPostImage(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0});new CachedImageView("imageDirectoryName",e,t);var i=t.toImage().height,o=t.toImage().width,a=o/i,n=Math.floor(60*a),r=Ti.UI.createImageView({image:e,hires:!0,width:n,top:0});return r}var GetFeed=require("ui/common/GetFeed"),DateObject=require("ui/common/DateObject"),CachedImageView=require("ui/common/CachedImageView"),WebView=require("ui/common/WebView");module.exports=SinglePost;