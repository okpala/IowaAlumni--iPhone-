function SinglePost(e,t,i){var o=Ti.UI.createTableView({separatorColor:"d5d5d5",backgroundColor:"ffffff",height:"auto",width:300,left:10,top:10,bottom:0,padding:0,borderRadius:5,borderColor:"#d5d5d5",borderWidth:1,scrollable:!1}),a=Ti.UI.createTableViewRow({height:120});a.addEventListener("click",function(){new WebView(e.url),t.trackEvent({category:"Articles",action:"click",label:"An Article in the "+i+"'s Window - "+e.url,value:1})}),o.height=a.height;var n=[];n.push(a),o.setData(n);var r=Ti.UI.createTableViewRow({hasChild:!0,height:o.height+15,padding:0,top:0,bottom:0,layout:"vertical",selectionStyle:"none",backgroundColor:"e2e2e2"});r.rightImage=null,r.backgroundSelectedImage=null,r.backgroundFocusImage=null,r.add(o);var l=getTitleLabel(e.title);if(a.add(l),"NA"!=e.image){var d=Ti.UI.createView({width:60,height:60,right:15,top:l.height+20,borderRadius:4,borderColor:"#d5d5d5",borderWidth:1}),c=Ti.UI.createImageView({image:e.image,defaultImage:"loader120x120.png",hires:!0,width:Ti.UI.FILL,height:Ti.UI.FILL,top:0});d.add(c),a.add(d);var s=getDescriptionLabel(e.description,200);a.add(s)}else{var s=getDescriptionLabel(e.description,280);a.add(s)}s.top=l.height+10;var u=Ti.UI.createLabel({text:new DateObject(e.pubDate).prettyDate(),left:10,bottom:10,height:15,textAlign:"left",width:270,color:"#616161",shadowColor:"#ffffff",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});return u.top=l.height+s.height+10,a.add(u),a.height=l.height+s.height+u.height,o.height=a.height,r.height=a.height+10,r}function getTitleLabel(e){var t=Ti.UI.createLabel({text:e,height:"auto",width:250,color:"#efc006",font:{fontFamily:"Helvetica",fontSize:16,fontWeight:"bold"}}),i=Ti.UI.createView({width:250,height:"auto"});i.add(t);var o=Ti.UI.createLabel({text:e,left:10,top:10,bottom:10,height:i.toImage().height,textAlign:"left",width:270,color:"#303030",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"Helvetica-Bold",fontSize:16,fontWeight:"normal"}});return o}function getDescriptionLabel(e,t){var i=Ti.UI.createLabel({text:e,left:10,bottom:10,top:0,height:70,textAlign:"left",width:t,color:"#000000",font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});return i}function getPostImage(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0});new CachedImageView("imageDirectoryName",e,t);var i=t.toImage().height,o=t.toImage().width,a=o/i,n=Math.floor(60*a),r=Ti.UI.createImageView({image:e,hires:!0,width:n,top:0});return r}var GetFeed=require("ui/common/GetFeed"),DateObject=require("ui/common/DateObject"),CachedImageView=require("ui/common/CachedImageView"),WebView=require("ui/common/WebView");module.exports=SinglePost;