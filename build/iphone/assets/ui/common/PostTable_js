function PostTable(){this.pulling=!1,this.reloading=!1;var e=Ti.UI.createTableView({separatorColor:"transparent",backgroundColor:"#e2e2e2"}),t=Ti.UI.createView({backgroundColor:"#e2e2e2",width:320,height:60}),i=Ti.UI.createLabel({text:"Pull down to refresh...",left:55,width:200,bottom:30,height:"auto",color:"#576c89",textAlign:"center",font:{fontSize:13,fontWeight:"bold"},shadowColor:"#fff",shadowOffset:{x:0,y:1}}),o=Ti.UI.createLabel({text:"Last Updated: "+(new FormatDate).getDate(),left:55,width:200,bottom:15,height:"auto",color:"#576c89",textAlign:"center",font:{fontSize:12},shadowColor:"#fff",shadowOffset:{x:0,y:1}}),a=Ti.UI.createActivityIndicator({left:20,bottom:13,width:30,height:30});return t.add(i),t.add(o),t.add(a),e.headerPullView=t,e.updateLabelText=function(e){i.text=e},e.updateDateText=function(e){o.text=e},e.hideActInd=function(){a.hide()},e.showActInd=function(){a.show()},e}var FormatDate=require("ui/common/FormatDate");module.exports=PostTable;