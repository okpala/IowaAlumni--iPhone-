function Row(e){this.postheight=0;var t=Ti.UI.createTableViewRow({hasChild:!0,link:e.url,height:"auto",padding:0,top:0,bottom:0,layout:"vertical",backgroundColor:"e2e2e2"});t.rightImage=null,t.backgroundSelectedImage=null,t.backgroundFocusImage=null;var i=Ti.UI.createView({backgroundColor:"ffffff",height:"auto",width:300,left:0,top:0,bottom:0,padding:0});titlelbl=getTitleLabel(e.title),i.add(titlelbl),desclbl=getDescriptionLabel(e.description),i.add(desclbl),desclbl.top=titlelbl.height+15;var o=Ti.UI.createLabel({text:new DateObject(e.pubDate).prettyDate(),left:15,bottom:10,height:15,textAlign:"left",width:270,color:"#616161",shadowColor:"#ffffff",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});o.top=titlelbl.height+desclbl.height+20,i.add(o);var a=Ti.UI.createView({width:60,height:60,right:15,top:titlelbl.height+20,borderRadius:4,borderColor:"#d5d5d5",borderWidth:1}),n=getPostImage(e.image);return a.add(n),i.add(a),i.height=titlelbl.height+desclbl.height+o.height+35,t.height=i.height,t.add(i),t.addEventListener("click",function(e){new WebView(e.row.link)}),t}function getContainerHeight(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0}),i=t.toImage().height,o=t.toImage().width,a=i/o;return Math.floor(300*a)}function getTitleLabel(e){var t=Ti.UI.createLabel({text:e,height:"auto",width:250,color:"#efc006",font:{fontFamily:"Helvetica",fontSize:16,fontWeight:"bold"}}),i=Ti.UI.createView({width:250,height:"auto"});i.add(t);var o=Ti.UI.createLabel({text:e,left:15,top:15,bottom:10,height:i.toImage().height,textAlign:"left",width:270,color:"#303030",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"Helvetica-Bold",fontSize:16,fontWeight:"normal"}});return o}function getDescriptionLabel(e){var t=Ti.UI.createLabel({text:e,left:15,bottom:10,top:0,height:70,textAlign:"left",width:200,color:"#000000",font:{fontFamily:"HelveticaNeue-Light",fontSize:12,fontWeight:"bold"}});return this.postheight+=t.toImage().height,t}function getPostImage(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0}),i=t.toImage().height,o=t.toImage().width,a=o/i,n=Math.floor(60*a),r=Ti.UI.createImageView({image:e,hires:!0,width:n,top:0});return r}var DateObject=require("ui/common/DateObject"),CachedImageView=require("ui/common/CachedImageView"),WebView=require("ui/common/WebView");module.exports=Row;