function FeatureRow(e){this.containerheight=0;var t=Ti.UI.createTableViewRow({hasChild:!0,link:e.url,height:355,padding:0,top:0,bottom:0,layout:"vertical",backgroundColor:"e2e2e2",borderRadius:.5});t.rightImage=null,t.backgroundSelectedImage=null,t.backgroundFocusImage=null;var i=Ti.UI.createView({backgroundColor:"transparent",height:300,width:300,left:10,top:10,bottom:0,padding:0,borderRadius:5});this.containerheight=getContainerHeight(e.image),i.height=this.containerheight+65+30,t.height=this.containerheight+100+8;var a=Ti.UI.createImageView({image:e.image,width:300,height:this.containerheight,hires:!0,top:30}),n=Ti.UI.createImageView({width:300,height:40,hires:!0,top:1,image:"gold.png"}),o=Ti.UI.createImageView({width:300,height:150,hires:!0,top:this.containerheight-120,image:"shadow.png"});i.add(a),i.add(o),i.add(n),titlelbl=getTitleLabel(e.title,this.containerheight+30),i.add(titlelbl),desclbl=getDescriptionLabel(e.description,this.containerheight+30),i.add(desclbl);var r=Ti.UI.createLabel({text:"Posted "+new DateObject(e.pubDate).prettyDate()+" in Kudos to Iowa People",top:8,left:10,bottom:10,height:15,textAlign:"left",width:270,color:"#5c4e1a",shadowColor:"#f0d87f",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-CondensedBold",fontSize:12,fontWeight:"bold"}});return i.add(r),t.add(i),t.addEventListener("click",function(){new WebView(e.url)}),t}function getContainerHeight(e){var t=Ti.UI.createImageView({image:e,width:"auto",height:"auto",hires:!0});new CachedImageView("imageDirectoryName",e,t);var i=t.toImage().height,a=t.toImage().width,n=i/a;return Math.floor(300*n)}function getTitleLabel(e,t){var i=Ti.UI.createLabel({text:e,height:"auto",width:250,color:"#efc006",font:{fontFamily:"HelveticaNeue-Light",fontSize:25,fontWeight:"bold"}}),a=Ti.UI.createView({width:250,height:"auto"});a.add(i),theheight=a.toImage().height;var n=Ti.UI.createLabel({text:e,left:10,bottom:10,height:theheight,textAlign:"left",width:250,color:"#efc006",shadowColor:"#000000",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:25,fontWeight:"bold"}});return n.top=t-theheight-5,n}function getDescriptionLabel(e,t){var i=Ti.UI.createView({backgroundColor:"#0c0c0c",backgroundImage:"dark.jpg",width:300,height:65,top:t}),a=Ti.UI.createLabel({text:e,left:10,top:0,bottom:10,height:55,textAlign:"left",width:260,color:"#ffffff",shadowColor:"#000000",shadowOpacity:.5,shadowOffset:{x:0,y:1},font:{fontFamily:"HelveticaNeue-Light",fontSize:14,fontWeight:"bold"}});return i.add(a),i}var DateObject=require("ui/common/DateObject"),CachedImageView=require("ui/common/CachedImageView"),WebView=require("ui/common/WebView");module.exports=FeatureRow;